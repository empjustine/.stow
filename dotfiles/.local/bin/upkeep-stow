#!/bin/sh

src="${XDG_CONFIG_HOME:-$HOME/.config}/runcom"

pushd "$src" >/dev/null
echo "inside $src"
stow --target="$HOME" --restow *
popd >/dev/null


src="$HOME/Private"
if [ -d "$src/.profile" ]; then
  pushd "$src" >/dev/null
  echo "inside $src"
  stow --target="$HOME" --restow ".profile"
  popd >/dev/null
else
  echo "missing: $HOME/Private/.profile"
fi
